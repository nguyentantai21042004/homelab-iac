# HelmChartConfig để override Traefik default settings
# K3s sẽ đọc file này và apply khi cài/upgrade Traefik
apiVersion: helm.cattle.io/v1
kind: HelmChartConfig
metadata:
  name: traefik
  namespace: kube-system
spec:
  valuesContent: |-
    service:
      type: LoadBalancer
    ports:
      web:
        port: 80
      websecure:
        port: 443
    # Enable Traefik dashboard (optional)
    ingressRoute:
      dashboard:
        enabled: false
