# Inventory - Server list
# Copy this file to hosts.yml and update with your values

all:
  children:
    # ===== Admin VM =====
    admin_servers:
      hosts:
        admin:
          ansible_host: 192.168.1.xxx     # DHCP IP first, then static
          ansible_user: your-user

          vm_hostname: "admin"
          static_ip: "192.168.1.100/24"   # Target static IP
          gateway: "192.168.1.1"

    # ===== Database Servers =====
    postgres_servers:
      hosts:
        postgres:
          ansible_host: 172.16.19.xxx
          ansible_user: your-user

          vm_hostname: "postgres"
          static_ip: "172.16.19.10/24"
          gateway: "172.16.19.1"

          # Data disk (optional)
          data_disk_device: "/dev/sdb"
          data_mount_point: "/var/lib/postgresql"

    # ===== Storage Servers (MinIO + Zot) =====
    storage_servers:
      hosts:
        storage:
          ansible_host: 172.16.21.xxx
          ansible_user: your-user

          vm_hostname: "storage"
          static_ip: "172.16.21.10/24"
          gateway: "172.16.21.1"

          # Data disk
          data_disk_device: "/dev/sdb"
          data_mount_point: "/mnt/storage_data"

    # ===== API Gateway Servers (Traefik) =====
    api_gateway_servers:
      hosts:
        api-gateway:
          ansible_host: 192.168.1.xxx     # DHCP IP first, then static
          ansible_user: your-user

          vm_hostname: "api-gateway"
          static_ip: "192.168.1.101/24"   # Target static IP (adjust as needed)
          gateway: "192.168.1.1"

