# --- UPLOAD LOCATION ---
# Đây là đường dẫn trên HOST (VM) trỏ vào ổ Data to
UPLOAD_LOCATION={{ immich_upload_location }}

# --- DATABASE LOCATION ---
# Lưu DB trên ổ to luôn cho an toàn
DB_DATA_LOCATION={{ immich_db_location }}

# --- PASSWORD ---
DB_PASSWORD={{ immich_db_password }}

# --- VERSION ---
# Để release để luôn update bản stable mới nhất
IMMICH_VERSION={{ immich_version }}

# --- POSTGRES CONFIG ---
DB_USERNAME={{ immich_db_username }}
DB_DATABASE_NAME={{ immich_db_name }}

# --- CPU OPTIMIZATION (No GPU) ---
# FFmpeg transcoding settings for CPU
IMMICH_MEDIA_FFMPEG_THREADS=2
IMMICH_MEDIA_FFMPEG_CRF=23
IMMICH_MEDIA_FFMPEG_PRESET=medium

# Machine Learning settings
IMMICH_MACHINE_LEARNING_WORKERS=1
IMMICH_MACHINE_LEARNING_WORKER_TIMEOUT=120
