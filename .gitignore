.vault_pass
*.vault_pass

# Inventory với sensitive data
ansible/inventory/hosts
ansible/inventory/*.yml
!ansible/inventory/*.example.yml

# Retry files
*.retry

# ===== IDE =====
.idea/
.vscode/
*.swp
*.swo
.DS_Store

# ===== Logs =====
*.log
